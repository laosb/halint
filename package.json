{
  "name": "wright-core",
  "version": "0.0.3",
  "description": "A simple language linter mainly for Chinese.",
  "main": "./dist/index.js",
  "browser": {
    "underscore": "./src/shims/underscore.js",
    "babel-polyfill": "./src/shims/babel-polyfill.js"
  },
  "scripts": {
    "test": "./node_modules/.bin/mocha --reporter spec",
    "build": "babel src --presets babel-preset-es2015 --out-dir dist",
    "build-browser": "browserify dist/index.js -s wright -o dist/wright-core.b.js",
    "browser-minify": "uglifyjs dist/wright-core.b.js -c -o dist/wright-core.b.min.js",
    "lint": "eslint .",
    "pretest": "npm run lint --silent && npm run build",
    "prebuild": "npm run lint",
    "prepublish": "npm run build && npm run build-browser && npm run browser-minify && npm run build-web",
    "build-web": "cp dist/wright-core.b.min.js docs/assets/wright-core.b.min.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/laosb/wright.git"
  },
  "keywords": [
    "lint",
    "Chinese"
  ],
  "author": "laosb",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/laosb/wright/issues"
  },
  "homepage": "https://github.com/laosb/wright#readme",
  "devDependencies": {
    "babel-cli": "^6.10.1",
    "babel-preset-es2015": "^6.9.0",
    "blanket": "^1.2.3",
    "browserify": "^13.0.1",
    "eslint": "^3.3.1",
    "eslint-config-airbnb": "^10.0.1",
    "eslint-plugin-import": "^1.9.2",
    "eslint-plugin-jsx-a11y": "^2.1.0",
    "eslint-plugin-react": "^6.1.2",
    "mocha": "^3.0.2",
    "should": "^11.1.0",
    "uglify-js": "^2.7.0"
  },
  "dependencies": {
    "babel-polyfill": "^6.9.1",
    "underscore": "^1.8.3"
  },
  "eslintConfig": {
    "extends": [
      "airbnb"
    ]
  }
}
